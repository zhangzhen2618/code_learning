{
    "configurations": [
        {
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/**",
                "/usr/share/sdcc/include/**"
            ],
            "defines": [
                    "__C51__",
                    "__VSCODE_C51__",
                    "reentrant=",
                    "compact=",
                    "small=",
                    "large=",
                    "data=",
                    "idata=",
                    "pdata=",
                    "bdata=",
                    "xdata=",
                    "code=",
                    "bit=char",
                    "sbit=char",
                    "sfr=char",
                    "sfr16=int",
                    "sfr32=int",
                    "__interrupt=",
                    "__using=",
                    "_at_=",
                    "_priority_=",
                    "_task_="
                ],
            "intelliSenseMode": "${default}",
            "compilerPath": "/usr/bin/sdcc",
            "cStandard": "c99",
            "cppStandard": "c++98",
            // "configurationProvider": "ms-vscode.makefile-tools"
        }
    ],
    "version": 4
}